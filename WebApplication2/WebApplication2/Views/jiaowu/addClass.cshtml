        <link rel="stylesheet" media="screen" href="css/style.ie9.css"/>
    <![endif]-->
    <!--[if IE 8]>
        <link rel="stylesheet" media="screen" href="css/style.ie8.css"/>
    <![endif]-->
    <!--[if lt IE 9]>
        <script src="http://css3-mediaqueries-js.googlecode.com/svn/trunk/css3-mediaqueries.js"></script>
    <![endif]-->
</head>
<body class="withvernav">
    <div class="bodywrapper">
        <div class="topheader">
            <div class="left">
                <h1 class="logo">Toy <span>Car</span></h1>
                <span class="slogan">在线协同教学平台</span>



                <br clear="all" />

            </div><!--left-->

            <div class="right">
                <!--<div class="notification">
                    <a class="count" href="ajax/notifications"><span>9</span></a>
                </div>-->
                <div class="userinfo">
                    <img src="~/images/thumbs/avatar.png" alt="" />
                    <span>教务人员</span>
                </div><!--userinfo-->

                <div class="userinfodrop">
                    <div class="avatar">
                        <a href=""><img src="~/images/thumbs/avatarbig.png" alt="" /></a>
                    </div><!--avatar-->
                    <div class="userdata">
                        <h4>
                            @if (Session["CurUser"] != null)
                            {
                                @Session["CurUser"].ToString();
                            }
                        </h4>
                        <span>
                            @if (Session["CurUserName"] != null)
                            {
                                @Session["CurUserName"].ToString();
                            }
                        </span>
                        <ul>
                            <li><a href="\jiaowu\LogOut">退出</a></li>
                        </ul>
                    </div><!--userdata-->
                </div><!--userinfodrop-->
            </div><!--right-->
        </div><!--topheader-->


        <div class="header">
            <ul class="headermenu">
                <li><a href="\jiaowu\Tojiaowu"><span class="icon icon-flatscreen"></span>学期管理</a></li>
                <li class="current"><a href="\jiaowu\Tomanageblog"><span class="icon icon-pencil"></span>课程管理</a></li>
                <!--li><a href="messages"><span class="icon icon-message"></span>查看消息</a></li>
                <li><a href="reports"><span class="icon icon-chart"></span>统计报表</a></li>-->
            </ul>
            <div class="headerwidget">

            </div><!--headerwidget-->

        </div><!--header-->

        <div class="vernav2 iconmenu">
            <ul>
                <li><a href="\jiaowu\TocheckClass">查看课程</a></li>
				<li class="current"><a href="\jiaowu\ToaddClass" class="editor">添加课程</a></li>


            </ul>
            <a class="togglemenu"></a>
            <br /><br />
        </div><!--leftmenu-->

        <div class="centercontent">

            <div class="pageheader">
                <h1 class="pagetitle">添加课程</h1>
                <span></span>

                <ul class="hornav"></ul>
            </div><!--pageheader-->

            <div id="contentwrapper" class="contentwrapper">

                <div id="basicform" class="subcontent">

                    <div class="contenttitle2">
                        <h3>Form</h3>
                    </div><!--contenttitle-->
                    <form class="stdform" action="addClass" method="post" onsubmit="ADDclass()">

                        <p>
                            <label>课程名称</label>
                            <span class="field"><input required type="text" name="name" class="smallinput" /></span><br/>
                            <label>任课教师</label>
                            <span class="field"><input required type="text" name="teacher" class="smallinput" /></span><br />
                            <label>上课地点</label>
                            <span class="field"><input required type="text" name="location" class="smallinput" /></span><br />
                            <label>上课时间</label>
                            <span class="field"><input required type="text" name="time" class="smallinput" /></span><br />
                            <label>学分</label>
                            <span class="field"><input required type="number" name="credit" class="smallinput" /></span><br />

                        </p>


                        <br clear="all" /><br />

                        <p class="stdformbutton">
                            <button class="submit radius2">提交</button>
                        </p>
                    </form>
                <script language="javascript">
                    function ADDclass()
                    {
                        //alert("提交成功！");
                    }
                    </script>

                </div><!-- centercontent -->


            </div><!--bodywrapper-->
        </div>
</body>
</html>