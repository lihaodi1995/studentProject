    <script language="javascript">
        function moving(abc) {
            //if (student_type == 1)
                //document.getElementById("abc.evabut").disabled = true;
        }
        function evabut_click() {
            var value = "";
            var getradio = document.getElementsByName("eva");
            var b;
            for (var i = 0; i < getradio.length; i++) {
                if (getradio[i].checked == true) {
                    b = i;
                    value = getradio[i].value;
                    var Teststring = prompt("评价", "");

                    if (Teststring == "") {

                        location.href("Student_evateam");
                    }
                    else {
                        console.log("b:", b);
                        console.log("valueId:", document.getElementById("id"));
                        var valueId = document.getElementById("id").rows[b + 1].cells[1];
                        var getValue = valueId.innerHTML;
                        //getValue


                        console.log("getValue:", getValue);
                        console.log("Teststring", Teststring);
                        document.getElementById('evab').value = getValue + 'A' + Teststring;
                    }
                }
            }
            if (value == "") alert("请选择一名学生");




        }
    </script>


        <div class="centercontent">
            <form id="form1" action="" method="post">
                <div id="contentwrapper" class="contentwrapper">

                    <div class="contenttitle2">
                        <h3>团队信息</h3>
                    </div><!--contenttitle-->

                    <table id="id" cellpadding="0" cellspacing="0" border="0" class="stdtable" value="1">
                        <colgroup>
                            <col class="con0" />
                            <col class="con1" />
                            <col class="con0" />
                            <col class="con1" />
                            <col class="con0" />
                        </colgroup>
                        <thead>
                            <tr>
                                @if (ViewData["负责人id1"].ToString() == Session["CurUser"].ToString())
                            {
                                <th class="head1">是否评价</th>
                            }
                            <th class="head0">学号</th>
                            <th class="head1">成员姓名</th>
                            <th class="head0">评价</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (member m in Model)
                    {
                        <tr>
                            @if (ViewData["负责人id1"].ToString() == Session["CurUser"].ToString())
                            {
                                <td><input name="eva" type="radio" value="@m.memberid" /></td>
                            }
                            <td>@m.memberid</td>
                            <td>@m.membername</td>
                            @if (m.score!=0)
                            {
                                <td>@m.score</td>
                            }
                            else
                            {
                                <td>未评价</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <br />
            @if (ViewData["负责人id1"].ToString() == Session["CurUser"].ToString())
            {
                <button type="submit" value="评价该成员" name="evabut" id="evab" onclick="javascript:evabut_click()" onmouseover="moving(form1)">评价该成员</button>
