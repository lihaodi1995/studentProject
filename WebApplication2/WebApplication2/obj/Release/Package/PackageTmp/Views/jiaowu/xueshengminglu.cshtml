        <script src="http://css3-mediaqueries-js.googlecode.com/svn/trunk/css3-mediaqueries.js"></script>
    <![endif]-->
</head>
<body class="withvernav">
    <div class="bodywrapper">
        <div class="topheader">
            <div class="left">
                <h1 class="logo">Toy <span>Car</span></h1>
                <span class="slogan">在线协同教学平台</span>



                <br clear="all" />

            </div><!--left-->

            <div class="right">
                <!--<div class="notification">
                    <a class="count" href="ajax/notifications"><span>9</span></a>
                </div>-->
                <div class="userinfo">
                    <img src="~/images/thumbs/avatar.png" alt="" />
                    <span>教务人员</span>
                </div><!--userinfo-->

                <div class="userinfodrop">
                    <div class="avatar">
                        <a href=""><img src="~/images/thumbs/avatarbig.png" alt="" /></a>
                        
                    </div><!--avatar-->
                    <div class="userdata">
                        <h4>
                            @if (Session["CurUser"] != null)
                            {
                                @Session["CurUser"].ToString();
                            }
                        </h4>
                        <span>
                            @if (Session["CurUserName"] != null)
                            {
                                @Session["CurUserName"].ToString();
                            }
                        </span>
                        <ul>
                            <li><a href="\jiaowu\LogOut">退出</a></li>
                        </ul>
                    </div><!--userdata-->
                </div><!--userinfodrop-->
            </div><!--right-->
        </div><!--topheader-->


        <div class="header">
            <ul class="headermenu">
                <li class="current"><a href="\jiaowu\Tojiaowu"><span class="icon icon-flatscreen"></span>学期管理</a></li>
                <li><a href="\jiaowu\Tomanageblog"><span class="icon icon-pencil"></span>课程管理</a></li>
                <!--li><a href="messages"><span class="icon icon-message"></span>查看消息</a></li>
                <li><a href="reports"><span class="icon icon-chart"></span>统计报表</a></li>-->
            </ul>
            <div class="headerwidget">

            </div><!--headerwidget-->

        </div><!--header-->

        <div class="vernav2 iconmenu">
            <ul>
					<li><a href="\jiaowu\Toxueqixinxi" class="icon icon-pencil">学期信息</a></li>
                    
					<li class="current"><a href="\jiaowu\Toxueshengminglu" class="icon icon-pencil">学生名录</a></li>

            </ul>
            <a class="togglemenu"></a>
            <br /><br />
        </div><!--leftmenu-->

        <div class="centercontent">

            <div class="pageheader">
                <h1 class="pagetitle">学生信息</h1>
                <span></span>

                <ul class="hornav"></ul>
            </div><!--pageheader-->

            <div id="contentwrapper" class="contentwrapper">

                <div id="basicform" class="subcontent">

                    <div class="contenttitle2">
                        <h3>学生信息</h3>
                    </div><!--contenttitle-->
                    
				<style type="text/css">
					table-1,th,td
						{
						border:1px solid black;
						}
					table-1 td
						{
						text-align:right;
						}
				</style>
				<table class="table-1" border="1" width="1000px">
					<tr>
						<th>姓名</th>
						<th>学号</th>
						<th>联系方式</th>
					</tr>
                    @foreach (student stu in Model)
                    {
					<tr>
						<td>@stu.student_name</td>
                        <td>@stu.student_id</td>
                        <td>@stu.tel</td>
					</tr>
                    }
				</table>
				<br /><br /><br />
				
				
				<div style="margin:0 auto;width:200px;">
				<input type="button" name="addbutton" value="添加学生信息"onclick="location.href='tianjiaxueshengxinxi'"></p>
				</div>


                </div><!-- centercontent -->


            </div><!--bodywrapper-->
        </div>
</body>
</html>